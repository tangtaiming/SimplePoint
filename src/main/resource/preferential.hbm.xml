<?xml version="1.0" encoding= "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
<hibernate-mapping package="com.ttm.orm">  
    <!--生成默认为的 优惠 数据库表-->  
    <class name ="com.ttm.orm.Preferential" table="my_wxy.preferential">  
        <id name ="id">
            <generator class ="assigned"></generator>  
        </id > 
        <property name ="name" type="string"></property>  
        <property name ="creatdId" type="int"></property>  
        <property name ="creatdDate" type="string"></property>  
    </class >
    
</hibernate-mapping>