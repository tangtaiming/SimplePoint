<?xml version="1.0" encoding= "UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC   
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" > 
<hibernate-mapping package="com.ttm.orm">  
    <!--生成默认为的 优惠 数据库表-->  
    <class name ="com.ttm.orm.Preferential" table="bdm247336281_db.preferential">  
        <id name ="id">
            <!-- assigned 是不会自动生成的主键形式 -->
            <generator class ="native"></generator>  
        </id > 
        <property name ="name" type="string"></property>  
		<property name="url" type="string"></property>
        <property name ="creatdId" type="int"></property>  
        <property name ="creatdDate" type="string"></property>  
    </class >
    
</hibernate-mapping>